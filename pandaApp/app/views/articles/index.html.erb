<h1> List of Saved Articles </h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Password</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.url %></td>
			<td><%= article.user %></td>
			<td><%= link_to 'Destroy', article, method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>